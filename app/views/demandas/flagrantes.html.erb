<h1>Flagrantes</h1>

<script>
    $(document).ready(function() {
        $('li[accesskey|="4"]').addClass("current_page_item");
    });
    
    function gerarRelatorio(){
       var url = '/consultas/relatorio/3/' +
         $('#date_mes').val() + "/" +  $('#date_ano').val() + ".pdf";
       
        window.location = url;
    }
    
    function filtrar(){
       var url = '/consultas/list/3/' +
         $('#date_mes').val() + "/" +  $('#date_ano').val();
       
        window.location = url;
    }
</script>
<br>
<%= render '/layouts/filtro' %>

<table id="box-table-a" class="advancedtable">
    <thead>
      <th>Data</th>
      <th>Uf</th>
      <th>Solicitante</th>
      <th>Departamento</th>
      <th>Resposta</th>
      <th class="noclick"></th>
      <th class="noclick" style="text-align:center">Opera&ccedil;&otilde;es</th>
      <th class="noclick"></th>
    </thead>
    <tbody>
    <% @demandas.each do |demanda| %>
      <tr>
        <td><%= demanda.data.strftime("%d/%m/%Y") %></td>
        <td><%= demanda.uf %></td>
        <td><%= demanda.solicitante %></td>
        <td><%= demanda.departamento %></td>
        <% if demanda.resposta != nil %>
            <td><%= demanda.resposta.strftime("%d/%m/%Y") %></td>
        <% else %>
            <td>&nbsp;</td>
        <% end %>
        <td><img src="/assets/open.png" style="vertical-align:middle"/>&nbsp;<%= link_to 'Visualizar', :controller => "demandas", :action => "show_flagrante", :id => demanda.id %></td>
        <td><img src="/assets/edit.png" style="vertical-align:middle"/>&nbsp;<%= link_to "Editar", :controller => "demandas", :action => "edit_flagrante", :id => demanda.id %></td>
        <td class="excluir"><img src="/assets/delete.png" style="vertical-align:middle"/>&nbsp;<a href="javascript:deleteD('/flagrantes/destroy_flagrante/<%=demanda.id%>')">Excluir</a></td>
      </tr>
    <% end %>
    </tbody>
</table>
<script>
    function deleteD(path){
        if(confirm("Voce tem certeza que desejar excluir esse flagrante?")){
            window.location = path;
        }
    }
    
</script>
<br />

<%= link_to 'Novo Flagrante', "/flagrantes/new" %>
