<%= form_for(@demanda) do |f| %>
  <% if @demanda.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@demanda.errors.count, "error") %> prohibited this demanda from being saved:</h2>

      <ul>
      <% @demanda.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field_group">
    <h3>Dados da Consulta:</h3>
    <%= f.hidden_field :tipo_demanda, :value => 2 %>
    <div class="field">
      <%= f.label :data %><br />
      <%= f.date_select :data %>
    </div>
    <div class="field">
      <%= f.label :uf %><br />
      <%= select_tag('demanda[uf]', options_for_select([
        ['Alagoas', "AL"], 
        ['Bahia', "BA"], ['Ceará', "CE"],['Maranhão', "MA"],
        ['Pernambuco', "PE"],['Piauí', "PI"], ['Paraíba','PB'],
        ['Rio Grande do Norte', "RN"],
        ['Sergipe', "SE"]
        ])) %>
    </div>
    <div class="field">
      <%= f.label :solicitante %><br />
      <%= f.text_field :solicitante %>
    </div>
    <div class="field">
      <%= f.label :departamento %><br />
      <%= f.text_field :departamento %>
    </div>
    <div class="field">
      <%= f.label :resposta %><br />
      <%= f.date_select :resposta %>
    </div>
    <div class="field">
      <%= f.label :carga_horaria %><br />
      <%= f.text_field :carga_horaria %>
    </div>
  </div>
  
  <div class="actions">
    <%= f.submit "Salvar"%>
  </div>
<script>$('a[accesskey|="3"]').parent().addClass("current_page_item");</script>
<% end %>
