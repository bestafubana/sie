<%= image_tag(@demanda.foto_url, :width => 150) if @demanda.foto.present?%>

<% if !@demanda.data.nil? %>
  <p>
    <b>Data:</b>
    <%= @demanda.data %>
  </p>
<% end %>

<p>
  <b>Uf:</b>
  <%= @demanda.uf %>
</p>

<p>
  <b>Solicitante:</b>
  <%= @demanda.solicitante %>
</p>

<p>
  <b>Empresa:</b>
  <%= @demanda.caminho_foto %>
</p>

<p>
  <b>Departamento:</b>
  <%= @demanda.departamento %>
</p>

<% if !@demanda.resposta.nil? %>
  <p>
    <b>Resposta:</b>
    <%= @demanda.resposta.strftime("%d/%m/%Y") %>
